# AITrade_MT5 配置文件模板
# 使用说明：复制此文件为 config.yaml 并填入真实的配置信息

# 交易相关配置
trading:
  # 魔法数字，用于标识由本程序创建的订单
  magic_number: 100001
  # 是否管理所有订单（忽略魔法数字限制）
  manage_all_orders: true

# 外汇对配置
forex_pairs:
  # 监控的外汇对列表
  monitored_pairs:
    - "USDJPYm" # 美元/���元
    - "USDCHFm" # 美元/瑞士法郎
    - "USDCADm" # 美元/加拿大元
    - "EURUSDm" # 欧元/美元
    - "AUDUSDm"

# AI配置
ai:
  # AI服务基础URL - 请替换为您的AI服务商地址
  base_url: "https://your-ai-service.com/v1"
  # API密钥 - 请替换为您的真实API密钥
  api_key: "sk-YOUR_API_KEY_HERE"
  # 模型ID - 根据您的AI服务商设置
  model_id: "gpt-4"
  # API请求超时时间（秒）
  timeout: 60
  # 自定义User-Agent（用于大部分站点的CF盾）
  user_agent: "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
  # AI分析调用间隔（秒）
  analysis_interval: 120
  # AI分析失败重试间隔（秒）
  retry_interval: 3

# 日志配置
logging:
  # 日志文件目录
  log_directory: "logs"